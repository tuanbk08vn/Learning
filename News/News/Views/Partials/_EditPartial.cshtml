@inherits Umbraco.Web.Mvc.UmbracoViewPage<News.ViewModel.RegisterViewModel>

@* the fun starts here *@

@using System.Web.UI.WebControls
@using News.Controller
@using News.ViewModel
@using (Html.BeginUmbracoForm<AccountController>("Edit"))
{
    <div class="form-horizontal container edit-form">
        <div class="first-name form-group row">
            <label class="col-md-2">First Name</label>
            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control col-md-6", @Value=Model.FirstName } })
        </div>
        <div class="last-name form-group row">
            <label class="col-md-2">Last Name</label>
            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control col-md-6", @Value=Model.LastName} })
        </div>
        <div class="username form-group row">
            <label class="col-md-2">UserName</label>
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control col-md-6", value=Model.UserName, @readonly = "readonly" } })
        </div>
        <div class="password form-group row">
            <label class="col-md-2">Password</label>
            <input class="col-md-6 form-control" readonly="" name="Password" value="************" /> 
        </div>

        <div class="DOB form-group row">
            <label class="col-md-2">DOB</label>
            @Html.EditorFor(m => m.DOB, new { htmlAttributes = new { @class = "form-control col-md-6", type = "date"} })
        </div>

        <div class="phone form-group row">
            <label class="col-md-2">Phone</label>
            @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control col-md-6" , Model.Phone} })
        </div>
        <div class="address form-group row">
            <label class="col-md-2">Address</label>
            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control col-md-6", Model.Address} })
        </div>
        <div class="email form-group row">
            <label class="col-md-2">Email</label>
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control col-md-6",Model.Email } })
            <h3 style="color:red">@TempData["error"]</h3>
        </div>
        <div class="form-group row">
            <input class="btn btn-primary col-md-2 btn-account-edit" type="submit" value="EDIT" />
        </div>
    </div>
}